@model IEnumerable<ToDoList.Models.UserTask>
@{
    ViewData["Title"] = "Task List";
}
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0">
                    <i class="bi bi-card-checklist me-2"></i>My Tasks
                </h2>
                <a asp-action="Create" class="btn btn-primary btn-lg px-4">
                    <i class="bi bi-plus-circle me-2"></i>New Task
                </a>
            </div>

            <form method="get" class="row g-3 align-items-center mb-4">
                <div class="col-auto">
                    <label for="status" class="col-form-label fw-semibold">Filter by status:</label>
                </div>
                <div class="col-auto">
                    <select id="status" name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">All</option>
                        <option value="Pending">Pending</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Done">Done</option>
                    </select>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Due Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <span class="badge rounded-pill fs-6 @GetBadgeClass(item.Status)">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>
                                        @(item.DueDate.HasValue? item.DueDate.Value.ToString("MM/dd/yyyy") : "-")
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-2">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>

                                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>

                                        <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content border-0 shadow-lg">
                                                    <div class="modal-header bg-danger text-white">
                                                        <h5 class="modal-title" id="deleteModalLabel-@item.Id">
                                                            Confirm Deletion
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete the task: <strong>@item.Title</strong>?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">Yes, Delete</button>
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-muted text-center py-4">
                                    <i class="bi bi-emoji-frown fs-3"></i><br />
                                    No tasks found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

@functions {
    public string GetBadgeClass(string status)
    {
        return status switch
        {
            "Done" => "bg-success text-white",
            "In Progress" => "bg-info text-white",
            "Pending" => "bg-warning text-dark",
            _ => "bg-secondary text-white"
        };
    }
}
